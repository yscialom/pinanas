api:
  dashboard: true
  debug: true
ping: {}
entryPoints:
  http:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: https
          scheme: https
  https:
    address: ":443"
  dns-udp:
    address: ":53/udp"
  dns-tcp:
    address: ":53/tcp"
serversTransport:
  insecureSkipVerify: true
providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
  file:
    filename: /config.yml
certificatesResolvers:
  myresolver:
    acme:
      email: "{{ pinanas.network.dns.provider.email }}"
      storage: /acme.json
      {% if (pinanas.acme.stagging | default(false)) == true -%}
      caServer: "https://acme-staging-v02.api.letsencrypt.org/directory"
      {% endif -%}
      dnsChallenge:
        provider: {{ pinanas.network.dns.provider.name }}
        delayBeforeCHeck: 0
accessLog:
  filePath: "/opt/traefik/access.log"
  fields:
    defaultMode: keep
    names:
      ClientUsername: drop
    headers:
      defaultMode: keep
      names:
          User-Agent: redact
          Authorization: drop
          Content-Type: keep
